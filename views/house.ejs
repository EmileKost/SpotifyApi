          </svg> 
          <section>
            <button id="fav-btn"><span>
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 33 33">
                    <g id="Icon_feather-arrow-down-circle" data-name="Icon feather-arrow-down-circle" transform="translate(-1.5 -1.5)">
                      <path id="Path_1" data-name="Path 1" d="M33,18A15,15,0,1,1,18,3,15,15,0,0,1,33,18Z" fill="none" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="3"/>
                      <path id="Path_2" data-name="Path 2" d="M12,18l6,6,6-6" fill="none" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="3"/>
                      <path id="Path_3" data-name="Path 3" d="M18,1V24" fill="none" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="3"/>
                    </g>
                  </svg>              
              </span>My favourite song</button>
              <button>
                <span><svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 30.621 30.621">
                    <g id="Icon_feather-search" data-name="Icon feather-search" transform="translate(-3 -3)">
                    <path id="Path_4" data-name="Path 4" d="M28.5,16.5a12,12,0,1,1-12-12,12,12,0,0,1,12,12Z" fill="none" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="3"/>
                    <path id="Path_5" data-name="Path 5" d="M31.5,31.5l-6.525-6.525" fill="none" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="3"/>
                    </g>
              </svg>
              </span></button>
          </section>
</header>

<main>
    <h1><%= data.playlistName %></h1>
    <ul id="songs-container">
        <% data.songs.forEach(song => { %>
            <li class="song-item">
                <figure>
                    <img src="<%= song.track.album.images[0].url %>"/>
                </figure>
                <h4><%= song.track.name %></h4>
                <section>
                    <% song.track.artists.forEach(artist => { %>
                        <p><%=artist.name %></p>
                    <% }) %>
                </section>
            </li>
        <% }) %>
    </ul>
</main>
<footer>
    <h2>Check out my other playlists</h2>
    <section>
        <a href="/music">Drum and Bass</a>
        <a href="/salsa">Salsa</a>
    </section>
</footer>
</body>
</html>